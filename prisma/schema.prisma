datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          String        @id @default(auto()) @map("_id") @db.ObjectId
    fullName    String
    email       String
    cleanEmail  String        @unique // Email Field which doesn't have labels or folders
    password    String
    ShortenLink ShortenLink[]
}

model ShortenLink {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    slug        String  @unique
    destination String
    title       String?
    User        User    @relation(fields: [userId], references: [id])
    userId      String  @db.ObjectId
}
