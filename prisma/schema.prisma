datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id              String        @id @default(auto()) @map("_id") @db.ObjectId
    fullName        String
    email           String
    normalizedEmail String        @unique @map("_normalized_email") // Email Field which doesn't have labels or folders
    password        String
    ShortenLink     ShortenLink[]
    createdAt       DateTime      @default(now())
}

model ShortenLink {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    slug        String   @unique
    destination String
    title       String?
    User        User     @relation(fields: [userId], references: [id])
    userId      String   @db.ObjectId
    createdAt   DateTime @default(now())
    QrCode      QrCode?
}

model QrCode {
    id            String      @id @default(auto()) @map("_id") @db.ObjectId
    ShortenLink   ShortenLink @relation(fields: [shortenLinkId], references: [id])
    shortenLinkId String      @unique @db.ObjectId
    fgColor       String
    bgColor       String
    iconUrl       String?
    createdAt     DateTime    @default(now())
}
